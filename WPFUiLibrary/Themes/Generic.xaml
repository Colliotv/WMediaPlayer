<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WPFUiLibrary"
    xmlns:contextMenu="clr-namespace:WPFUiLibrary.UserControls.ContextMenu">


    <Style TargetType="{x:Type contextMenu:Overlayable}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type contextMenu:Overlayable}">
                    <Grid>
                        <ContentPresenter x:Name="PART_Child" Grid.ZIndex="0"/>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
