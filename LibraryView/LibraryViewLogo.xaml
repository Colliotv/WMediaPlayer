<UserControl x:Class="LibraryView.LibraryViewLogo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LibraryView"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
        <Border CornerRadius="3" Background="LightGray" Width="6" Height="30" Margin="1"/>
        <Border CornerRadius="3" Background="LightGray" Width="6" Height="30" Margin="1"/>
        <Border CornerRadius="3" Background="LightGray" Width="6" Height="30" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-25"/>
                    <TranslateTransform X="5"/>
                </TransformGroup>
            </Border.RenderTransform>
        </Border>
    </StackPanel>
</UserControl>
